<%include common/head.ejs%>
<%include common/header.ejs%>


<div class="life-body">
    <div class="life-content">
        <div class="activity-add">
            <div class="row">
                <div class="col-xs-12 activity-add-title" ng-show="activityId == null">
                    创造一个新的活动
                </div>
                <div class="col-xs-12 activity-add-title" ng-show="activityId != null">
                    编辑活动
                </div>
            </div>
            <form name="createActivity">
                <input type="file" style="display: none">
                <div class="row">
                    <div class="col-xs-3">
                        <div class="activity-add-img-box" id="activity-img-box">
                            <img>
                            点击上传海报
                        </div>
                    </div>
                    <div class="col-xs-9">
                        <div class="row">
                            <div class="col-xs-12 form-group">
                                <input type="text" class="form-control" placeholder="输入标题，15字内" name="name">
                            </div>
                        </div>
                        <div class="row">
                            <!--开始日期-->
                            <div class="col-xs-3">
                                <p class="input-group">
                                    <input type="text" class="form-control" id="startDatePicker"/>
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" onclick="showStartDate()">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </button>
                                </span>
                                </p>
                            </div>
                            <!--开始时间-->
                            <div class="col-xs-3">
                                <select class="form-control" name="timeStart">
                                    <%for(var i = 0; i<24 ; i++){%>
                                        <%for(var k = 0; k<2; k++){%>
                                        <option><%if(i<10){%>0<%}%><%=i%>:<%if(k==0){%>0<%}%><%=k*30%></option>
                                        <%}%>
                                    <%}%>
                                </select>
                            </div>
                            <div class="col-xs-3">
                                <p class="input-group">
                                    <input type="text" class="form-control" id="endDatePicker"/>
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default" onclick="showEndDate()">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </button>
                                    </span>
                                </p>
                            </div>
                            <!--结束时间-->
                            <div class="col-xs-3">
                                <select class="form-control">
                                    <%for(var i = 0; i<24 ; i++){%>
                                        <%for(var k = 0; k<2; k++){%>
                                        <option><%if(i<10){%>0<%}%><%=i%>:<%if(k==0){%>0<%}%><%=k*30%></option>
                                        <%}%>
                                    <%}%>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 form-group">
                                <input type="text" class="form-control" placeholder="活动地址" ng-model="newActivity.location" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-2">
                                <input type="text" class="form-control" placeholder="费用" ng-model="newActivity.fee">
                            </div>
                            <div class="col-xs-4">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" ng-model="newActivity.needSignUp">是否需要报名
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 activity-add-next">
                        <button type="button" class="btn btn-primary btn-block blue" onclick="nextClick()">下一步</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="/javascripts/ui-bootstrap-tpls-0.13.0.min.js"></script>
<script>
    var url = window.location.pathname;     //   "/activity/add/a"
    var  array = url.split('/');
    var id = parseInt(array[array.length-1]);
    console.log(array);
    console.log(id);

    var $startDate = $("input#startDatePicker" );
    var $endDate = $('input#endDatePicker');

    $startDate.datepicker({
        currentText: "Today",
        dateFormat: "yy-mm-dd",
        gotoCurrent: true,
        minDate: new Date(),
        dayNamesMin: [ "日", "一", "二", "三", "四", "五", "六" ],
        onSelect : function(date, obj){
            console.log(date);
        }
    });
    $startDate.datepicker("setDate", new Date());

    $endDate.datepicker({
        currentText: "Today",
        dateFormat: "yy-mm-dd",
        gotoCurrent: true,
        minDate: new Date(),
        onSelect : function(date, obj){
            console.log(date);
        }
    });
    $endDate.datepicker("setDate", new Date());

    function showStartDate(){
        $startDate.datepicker( "show" );
    }
    function showEndDate(){
        $endDate.datepicker( "show" );
    }

    function nextClick(){

    }

</script>

<%include common/footer.ejs%>
<%include common/end.ejs%>