<%include common/head.ejs%>
<%include common/header.ejs%>


<div class="life-body">
    <div class="life-content">
        <div class="activity-add">
            <div class="row">
                <div class="col-xs-12 activity-add-title" ng-show="activityId == null">
                    创造一个新的活动
                </div>
                <div class="col-xs-12 activity-add-title" ng-show="activityId != null">
                    编辑活动
                </div>
            </div>
            <form name="createActivity" id="createActivity">
                <input type="file" style="display: none">
                <input type="hidden" name="contact">
                <div class="row">
                    <div class="col-xs-3">
                        <input type="hidden" class="form-control" name="cover">
                        <div class="activity-add-img-box" id="activity-img-box">
                            <img>
                            点击上传海报
                        </div>
                    </div>
                    <div class="col-xs-9">
                        <div class="row">
                            <div class="col-xs-12 form-group">
                                <input type="text" class="form-control" placeholder="输入标题，15字内" name="name" id="name">
                            </div>
                        </div>
                        <div class="row">
                            <!--开始日期-->
                            <div class="col-xs-3">
                                <p class="input-group">
                                    <input type="text" class="form-control" id="startDatePicker" name="dateStart"/>
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" onclick="showStartDate()">
                                        <i class="glyphicon glyphicon-calendar"></i>
                                    </button>
                                </span>
                                </p>
                            </div>
                            <!--开始时间-->
                            <div class="col-xs-3">
                                <select class="form-control" name="timeStart">
                                    <%for(var i = 0; i<24 ; i++){%>
                                        <%for(var k = 0; k<2; k++){%>
                                        <option><%if(i<10){%>0<%}%><%=i%>:<%if(k==0){%>0<%}%><%=k*30%></option>
                                        <%}%>
                                    <%}%>
                                </select>
                            </div>
                            <div class="col-xs-3">
                                <p class="input-group">
                                    <input type="text" class="form-control" id="endDatePicker" name="dateEnd"/>
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default" onclick="showEndDate()">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </button>
                                    </span>
                                </p>
                            </div>
                            <!--结束时间-->
                            <div class="col-xs-3">
                                <select class="form-control" name="timeEnd">
                                    <%for(var i = 0; i<24 ; i++){%>
                                        <%for(var k = 0; k<2; k++){%>
                                        <option><%if(i<10){%>0<%}%><%=i%>:<%if(k==0){%>0<%}%><%=k*30%></option>
                                        <%}%>
                                    <%}%>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 form-group">
                                <input type="text" class="form-control" placeholder="活动地址" name="location" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-2">
                                <input type="number" class="form-control" placeholder="费用" name="fee">
                            </div>
                            <div class="col-xs-4">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="needSignUp">是否需要报名
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12" style="text-align: center">
                        <span class="error-info" id="error-info"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 activity-add-next">
                        <button type="button" class="btn btn-primary btn-block blue" onclick="nextClick()">下一步</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="/javascripts/ui-bootstrap-tpls-0.13.0.min.js"></script>
<script>
    var url = window.location.pathname;     //   "/activity/add/a"
    var  array = url.split('/');
    var id = parseInt(array[array.length-1]);
    console.log(array);
    console.log(id);



    var $startDate = $("input#startDatePicker" );
    var $endDate = $('input#endDatePicker');
    var $error = $('span#error-info');

    $startDate.datepicker({
        currentText: "Today",
        dateFormat: "yy-mm-dd",
        gotoCurrent: true,
        minDate: new Date(),
        dayNamesMin: [ "日", "一", "二", "三", "四", "五", "六" ],
        monthNames: [ "一月", "二月", "三月", "四月", "五月", "六月", "七月", "八月", "九月", "十月", "十一月", "十二月" ],
        onSelect : function(date, obj){
            console.log(date);
        }
    });
    $startDate.datepicker("setDate", new Date());

    $endDate.datepicker({
        currentText: "Today",
        dateFormat: "yy-mm-dd",
        gotoCurrent: true,
        minDate: new Date(),
        dayNamesMin: [ "日", "一", "二", "三", "四", "五", "六" ],
        monthNames: [ "一月", "二月", "三月", "四月", "五月", "六月", "七月", "八月", "九月", "十月", "十一月", "十二月" ],
        onSelect : function(date, obj){
            console.log(date);
        }
    });
    $endDate.datepicker("setDate", new Date());

    function showStartDate(){
        $startDate.datepicker( "show" );
    }
    function showEndDate(){
        $endDate.datepicker( "show" );
    }


    function nextClick(){
        $error.empty();
        var data = Life.FormToJson($('form#createActivity'));
        console.log(data);
    }

    var validate = $("form#createActivity").validate({
        focusInvalid: false, //当为false时，验证无效时，没有焦点响应
        onkeyup: false,
        submitHandler: function(form){   //表单提交句柄,为一回调函数，带一个参数：form
            alert("提交表单");
            form.submit();   //提交表单
        },
//        errorPlacement: function(error, element) {
//            error.appendTo($('span#error-info'));
//        },

        rules:{
            name:{
                required:true
            }
        },
        messages:{
            name:{
                required:"必填"
            }
        }

    });

</script>

<%include common/footer.ejs%>
<%include common/end.ejs%>