<div class="header">
    <div class="header-content">
        <div class="header-logo">
            <a href="/"><img src="/images/logo.png" alt="生活嘉兴"/></a>
        </div>
        <div class="header-items">
            <a href="/">
                <div class="header-items-each">发现活动</div>
            </a>
            <div class="header-items-each about-us">关于我们
                <div class="header-menu">
                    <a href="/about/aboutus">
                        <div class="header-menu-item">关于我们</div>
                    </a>
                    <a href="/about/cooperation">
                        <div class="header-menu-item">寻求合作</div>
                    </a>
                    <a href="/about/howtouse">
                        <div class="header-menu-item">如何发布</div>
                    </a>
                </div>
            </div>
        </div>
        <div class="header-btns">
            <button type="button" class="btn btn-default btn-sm">发起活动</button>
        </div>
        <!--<div ng-show="isShow">-->
        <div class="header-login" ng-show="isShow && isLogin">
            <div class="header-login-icon">
                <img ng-src="{{user.icon || 'images/touxiang.png'}}" alt=""/>
            </div>
            <div class="header-login-name" ui-sref="user">
                {{user.userName}}
            </div>
            <div class="header-login-menu">
                <div class="header-menu-item">我的活动</div>
                <a href="/users/info"><div class="header-menu-item">个人资料</div></a>
                <div class="header-menu-item">退出登录</div>
            </div>
        </div>
        <div class="header-login" ng-show="isShow && !isLogin">
            <a href="/users/login"><button type="button" class="btn btn-default btn-sm">登陆</button></a>
            <a href="/users/signup"><button type="button" class="btn btn-default btn-sm">注册</button></a>
        </div>
        <div class="clear-fix"></div>
        <!--</div>-->
        <div class="clear-fix"></div>

    </div>
</div>