<%include common/head.ejs%>
<%include common/header.ejs%>

<div class="life-body" ng-app="login">
    <div class="life-content" ng-controller="loginCtrl">
        <div class="login">
            <div class="login-left">
                <form id="form-login" action>
                    <div class="form-group">
                        <input class="form-control input-box" placeholder="邮箱" name="a" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control input-box" placeholder="密码" name="b" type="password" required>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-4">
                                <input class="form-control input-sm" type="text" placeholder="验证码" >
                            </div>
                            <div class="col-xs-2 login-left-check-code">

                            </div>
                            <div class="col-xs-4">
                                <button type="button" class="btn btn-link">换一张</button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-3">
                                <button type="submit" class="btn btn-primary" id="btn-login">登陆</button>
                            </div>
                            <div class="col-xs-9 login-error">
                                <span>{{errorText}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <!--<a href="wechat.html" target="_blank"><button type="button" class="btn btn-primary btn-block btn-success">微信登陆</button></a>-->
                        <a ng-href="{{wechatPath}}" target="_blank">
                            <button type="button" class="btn btn-primary btn-block btn-success">微信登陆</button>
                        </a>
                    </div>
                </form>

                <!--<form ng-show="show.loginType == 2" name="dl">-->
                    <!--<div class="form-group">-->
                        <!--<p>账户注册成功，请登陆邮箱验证注册</p>-->
                    <!--</div>-->
                <!--</form>-->
                <div class="login-left-bottom-info">
                    <a>注册</a>
                    <a>登陆</a>
                    <a>忘记密码？</a>
                </div>
            </div>


            <div class="login-public-no">
                <img src="/images/public_number.jpg" alt="微信公众账号"/>
                <span>关注公众号</span>
            </div>
        </div>
    </div>
</div>

<script>
    var app = angular.module('login', []).controller('loginCtrl',function($scope){
        $scope.errorText = '234234234';
    })
</script>


<%include common/end.ejs%>